[alias]
    co = checkout
    br = branch
    ci = commit -v
    st = status -sb
    unstage = reset HEAD --
    last = log -1 HEAD
    hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    prune-local = !git branch --merged | grep -v \"^\\*\" | xargs git branch -d
    stats = shortlog -sne
    whatsnew = log HEAD@{1}..
    incoming = "!git remote update -p; git log ..@{u}"
    outgoing = log @{u}..
    start = !sh -c 'git fetch && git checkout -b $0 origin/$0'
    create-pull-request = !sh -c 'stash pull-request $0 $@'
    pr = !sh -c 'stash pull-request $0 @eirik.sletteberg @hafsteinn.ingason @jeremy.karlsson @o.smestad @bartosz.cytrowski @"michael.enger@tidal.com" @"torjus.bjaen@tidal.com"'

[color]
    ui = auto

[core]
    editor = vi
    excludesfile = /Users/torjus/Development/dotfiles/git/gitignore_global

[push]
    default = simple

[user]
	name = Torjus BjaÌŠen
	email = torjus.bjaen@tidal.com
[diff]
    algorithm = patience
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[commit]
	template = /Users/torjus/.stCommitMsg
[diff-so-fancy]
	markEmptyLines = false
