[alias]
    co = checkout
    br = branch
    ci = commit -v
    st = status -sb
    unstage = reset HEAD --
    last = log -1 HEAD
    hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    prune-local = !git branch --merged | grep -v \"^\\*\" | xargs git branch -d
    stats = shortlog -sne
    whatsnew = log HEAD@{1}..
    incoming = "!git remote update -p; git log ..@{u}"
    outgoing = log @{u}..

[color]
    ui = auto

[core]
    editor = vi
    excludesfile = ~/Development/dotfiles/git/gitignore_global
	pager = diff-so-fancy | less --tabs=1,5 -R

[push]
    default = simple

[user]
    name = Torjus Bj√•en
    email = torjus.bjaen@gmail.com
[diff]
    algorithm = patience
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
